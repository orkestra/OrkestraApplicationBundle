{% extends '::base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="all-wrapper no-menu-wrapper">
        <div class="login-logo-w">
            <a href="#login-form" class="logo">
                <span>Application</span>
            </a>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3">
                <div class="content-wrapper">
                    <div class="content-inner">
                        <div class="main-content main-content-grey-gradient no-page-header">
                            <div class="main-content-inner">
                                <h4 class="header red lighter bigger">
                                    Retrieve Password
                                </h4>
                                <p>
                                    If you've forgotten your password, enter your email address below. We will reset your password and send you a new one.
                                </p>

                                <form id="reset-form" method="post" action="{{ path('orkestra_password_reset_create') }}">
                                    <fieldset>
                                        <div class="form-group">
                                            <span class="block input-icon input-icon-right">
                                                {{ form_widget(form.email, { attr: { placeholder: 'Email' } }) }}
                                            </span>
                                        </div>
                                        <div class="hidden">
                                            {{ form_rest(form) }}
                                        </div>
                                        <div>
                                            <div class="submit">
                                                <button class="pull-right btn btn-danger">
                                                    <i class="icon-lightbulb"></i>
                                                    Reset Password
                                                </button>
                                            </div>
                                            <a href="{{ path("login") }}">Back to Login.</a>
                                        </div>
                                    </fieldset>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block additional_javascripts %}
    <script type="text/javascript">
        $(function() {
            Orkestra.form.bind(document.getElementById('reset-form'));
        });
    </script>
{% endblock %}

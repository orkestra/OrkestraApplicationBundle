{% extends '::base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="all-wrapper no-menu-wrapper">
  <div class="login-logo-w">
    <a href="#login-form" class="logo">
      <span>Application</span>
    </a>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="content-wrapper">
        <div class="content-inner">
          <div class="main-content main-content-grey-gradient no-page-header">
            <div class="main-content-inner">
            <form id="login-form" action="{{ path('login_check') }}" role="form" method="post">
              <h3 class="form-title form-title-first"><i class="icon-lock"></i> Login</h3>
              <div class="form-group">
                <label>Username</label>
                {{ form_widget(form.username, { attr: { autofocus: 'on', autocapitalize: 'off', autocorrect: 'off', placeholder: 'Username' } }) }}
              </div>
              <div class="form-group">
                <label>Password</label>
                {{ form_widget(form.password, { attr: { placeholder: 'Password' } }) }}
              </div>
              <div class="form-group">
                <div class="checkbox">
                  {{ form_widget(form.rememberMe) }}
                  {{ form_label(form.rememberMe) }}
                </div>
              </div>
              <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
              <a href="{{ path("orkestra_password_reset_new") }}" class="btn btn-link">Forgot your Password?</a>
            </form>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block additional_javascripts %}
<script type="text/javascript">
    $(function() {
        Orkestra.form.bind(document.getElementById('login-form'));
    });
</script>
{% endblock %}

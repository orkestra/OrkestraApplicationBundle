{% set modal_body_class = modal_body_class|default ~ ' modal-body' %}
<div class="modal-header">
    <button type="button" class="close js-cancel-button">&times;</button>
    <h3 class="modal-title">{% block title %}{% endblock %}</h3>
</div>
<div class="{{ modal_body_class }}">
    {% block content %}{% endblock %}
</div>
<div class="modal-footer">
    {% block footer %}
        {% block cancel_button %}
            <button class="js-cancel-button btn btn-default" type="button">
                <i class="icon-remove"></i>
                {% block cancel_button_text %}Cancel{% endblock %}
            </button>
        {% endblock %}
        {% block accept_button %}
            <button class="js-accept-button btn btn-primary" type="submit">
                <i class="icon-ok"></i>
                {% block accept_button_text %}Save Changes{% endblock %}
            </button>
        {% endblock %}
    {% endblock %}
</div>
{% block javascripts %}
{% endblock %}

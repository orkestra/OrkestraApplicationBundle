<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />

    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.2.min.js"></script>

    {% block stylesheets %}
    <link href="//fonts.googleapis.com/css?family=Oswald:300,400,700|Open+Sans:400,700,300" rel="stylesheet" type="text/css">
        {{ include('OrkestraApplicationBundle::_stylesheets.html.twig') }}
    {% endblock %}

    <link href="{{ asset('favicon.ico') }}" rel="shortcut icon">
    <link href="{{ asset('apple-touch-icon.png') }}" rel="apple-touch-icon">

    <title>{% block title %}{% endblock %}{% if block('category') is not empty %} - {% block category %}{% endblock %}{% endif %}</title>
</head>

<body>
{% block body %}
<div class="loading-spinner" id="loading-spinner"></div>
<div class="all-wrapper page-container">
  <div class="row">
    <div class="col-md-3">
      <div class="text-center">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="side-bar-wrapper collapse navbar-collapse navbar-ex1-collapse">
        {% block sidebar %}
          {{ include('OrkestraApplicationBundle::_sidebar.html.twig') }}
        {% endblock sidebar %}
      </div>
    </div>
    <div class="col-md-9">
      <div class="content-wrapper wood-wrapper">
        <div class="content-inner">
          <div class="page-header">
              <div class="header-links hidden-xs">
                <a data-modal="true" href="{{ path('orkestra_profile_edit') }}"><i class="icon-user"></i> Profile</a>
                <a href="{{ path('logout') }}"><i class="icon-signout"></i> Logout</a>
              </div>
              <h1>{% block title_icon %}<i class="icon-tablet"></i>{% endblock title_icon %} {{ block('title') }}</h1>
          </div>
          <div class="main-content">
            {% block content %}{% endblock content %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock body %}

{% block main_javascripts %}
{{ include('OrkestraApplicationBundle::_javascripts.html.twig') }}
{% endblock main_javascripts %}

{% block page_javascripts %}
    {% block additional_javascripts %}
    {% endblock additional_javascripts %}
{% endblock page_javascripts %}

</body>

</html>
